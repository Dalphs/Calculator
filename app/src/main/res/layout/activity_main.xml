<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/input_a"
        android:hint="@string/indtast_a"
        android:inputType="numberDecimal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/input_b"
        android:inputType="numberDecimal"
        android:hint="@string/indtast_b"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:id="@+id/result_text_view"
        android:textSize="50sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:textSize="20sp"
        android:id="@+id/plus"
        android:onClick="plusClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="160dp"
        android:textSize="20sp"
        android:id="@+id/minus"
        android:onClick="subtractClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gange"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="160dp"
        android:textSize="20sp"
        android:id="@+id/multiply"
        android:onClick="multiplyClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/divider"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="160dp"
        android:textSize="20sp"
        android:id="@+id/divide"
        android:onClick="divideClick"/>



</FrameLayout>